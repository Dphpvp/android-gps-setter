<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:orientation="vertical"
    android:fitsSystemWindows="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="24dp"
            android:elevation="1dp"
            app:navigationIcon="@drawable/ic_baseline_menu_24"/>

        <include
            android:id="@+id/search"
            layout="@layout/include_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="72dp"
            android:gravity="center_vertical"
            android:lines="1"
            android:padding="8dp"
            android:paddingStart="8dp"
            android:textSize="18sp"
        />

        <include
            android:id="@+id/map_container"
            layout="@layout/map_container"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>

        <!-- Landscape-specific button container for better positioning -->
        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="80dp"
            android:orientation="vertical"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/start_button"
                android:contentDescription="@string/location_set"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="@dimen/landscape_button_size"
                android:layout_height="@dimen/landscape_button_size"
                android:layout_marginBottom="@dimen/padding_8"
                android:alpha="0.95"
                android:elevation="10dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_play" 
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="@dimen/landscape_icon_size"
                android:visibility="visible" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/stop_button"
                android:contentDescription="@string/location_unset"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="@dimen/landscape_button_size"
                android:layout_height="@dimen/landscape_button_size"
                android:layout_marginBottom="@dimen/padding_8"
                android:alpha="0.95"
                android:elevation="10dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_stop"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="@dimen/landscape_icon_size"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/auto_navigation"
                style="@style/Widget.Material3.Button.TonalButton"
                android:contentDescription="@string/auto_navigation_desc"
                android:layout_width="@dimen/landscape_button_size"
                android:layout_height="@dimen/landscape_button_size"
                android:layout_marginBottom="@dimen/padding_8"
                android:alpha="0.95"
                android:elevation="10dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_route"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="@dimen/landscape_icon_size" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addfavorite"
                style="@style/Widget.Material3.Button.TonalButton"
                android:contentDescription="@string/addfavorite_desc"
                android:layout_width="@dimen/landscape_button_size"
                android:layout_height="@dimen/landscape_button_size"
                android:layout_marginBottom="@dimen/padding_8"
                android:alpha="0.95"
                android:elevation="10dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_baseline_favorite"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="@dimen/landscape_icon_size" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/getlocation"
                style="@style/Widget.Material3.Button.TonalButton"
                android:contentDescription="@string/getlocation_desc"
                android:layout_width="@dimen/landscape_button_size"
                android:layout_height="@dimen/landscape_button_size"
                android:alpha="0.95"
                android:elevation="10dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_baseline_my_location_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="@dimen/landscape_icon_size" />

        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/main_menu">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>